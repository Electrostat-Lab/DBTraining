<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<com.jme3.app.jmeSurfaceView.JmeSurfaceView
    android:id="@+id/jmeSurfaceView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        app:navigationIcon="@drawable/ic_baseline_menu_24"
        app:titleTextColor="@color/white"
        >
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preface By JME"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            />

    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/reset"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        app:tint="@color/greenDash"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_3d_rotation_24"
        android:padding="5dp"
        />
    <ImageView
        android:id="@+id/scheduleReset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/round_button"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_alarm_add_24"
        android:padding="5dp"
        />
</LinearLayout>

    <ImageView
        android:id="@+id/gridSwitcher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_grid_off_24"
        app:tint="@color/opacifiedWhite" />
    <RelativeLayout
        android:id="@+id/controllersHolder"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        >

    <ImageView
        android:id="@+id/animationSettings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:src="@drawable/ic_baseline_settings_24"
        android:padding="20dp"
        />
    </RelativeLayout>
</RelativeLayout>