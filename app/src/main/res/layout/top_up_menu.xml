<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/topUpMenu"
    android:layout_height="wrap_content"
    android:background="@drawable/jme_powered_background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="200dp"
        android:background="@mipmap/power1"
        android:layout_margin="10dp"
        >

    <ImageView
        android:id="@+id/dismissForever"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:src="@drawable/ic_twotone_disabled_by_default_24"
        app:tint="@color/crimsonRed" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/welcome_to_jme"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="5dp"
        android:paddingBottom="40dp"
        android:background="@color/blackCat"
        android:textSize="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
</RelativeLayout>