<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:dither="true"
    >
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
    <size
        android:width="150dp"
        android:height="50dp"/>
    <corners
        android:radius="5dp"
        />
    <gradient
        android:type="linear"
        android:startColor="@color/greyPad"
        android:centerColor="@color/white"
        android:endColor="@color/greyPad"
        />
    <stroke
        android:width="2dp"
        android:color="@color/white"
        />

</shape>